<% include ../partials/header %>
<script type="text/javascript" src="/scripts/zabuto_calendar.js"></script>
<link rel="stylesheet" type="text/css" href="/stylesheets/zabuto_calendar.min.css">
<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="/stylesheets/calendar.css">

<div id="my-calendar"></div>

<button><a href="./events/new">Add new event</a></button>

<div>

<% events.forEach(function(event){ %>
    <h1><%= event.eventName%></h1>
    <img src="<%= event.image%>">
<% })%>

</div>



<script type="application/javascript">
$(document).ready(function () {
  $("#my-calendar").zabuto_calendar({
  	language: 'en',
    cell_border: true,
    today: true,
    show_days: true,
    weekstartson: 0,
    nav_icon: {
      prev: '<i class="fa fa-chevron-circle-left"></i>',
      next: '<i class="fa fa-chevron-circle-right"></i>'
    },
    action: function(){
    	alert('clicked on date');
    }
  });
});
</script>
<% include ../partials/footer%>